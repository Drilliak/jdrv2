{% extends "JDRCoreBundle::layout.html.twig" %}

{% block title %}Création de partie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/JDR/CoreBundle/Session/sessioncreation.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/bootstrap-taginput/bootstrap-tagsinput.css') }}" rel="stylesheet"/>
{% endblock %}


{% block header %}{{ parent() }}{% endblock %}
{% block body %}
    {{ form_start(form, {'attr' : {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}


    <div class="form-group">
        {{ form_label(form.name, "Nom de la partie") }}
        {{ form_widget((form.name)) }}
    </div>

    <div class="form-group">
        {{ form_label(form.allowedStats, "Caractéristiques autorisées") }}
        {{ form_widget(form.allowedStats, {'value': 'PV, PV max, Mana, Mana max', 'attr': {'data-role':"tagsinput"}}) }}
    </div>


    {{ form_widget(form.submit, {'label': 'Créer une partie'}) }}

    {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/bootstrap-taginput/bootstrap-tagsinput.js') }}"></script>
{% endblock %}